{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "dev": {
      "cache": false,
      "env": [
        "PAYLOAD_SECRET",
        "MONGODB_URI",
        "WORDPRESS_API_URL",
        "PAYLOAD_PUBLIC_SERVER_URL",
        "PAYLOAD_PUBLIC_SERVER_PORT",
        "NODE_ENV",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "S3_BUCKET",
        "FRONTEND_STAGING_DOMAIN",
        "PRODUCT_TABLE_NAME",
        "ORDER_TABLE_NAME"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "PAYLOAD_SECRET",
        "MONGODB_URI",
        "WORDPRESS_API_URL",
        "PAYLOAD_PUBLIC_SERVER_URL",
        "PAYLOAD_PUBLIC_SERVER_PORT",
        "NODE_ENV",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "S3_BUCKET",
        "FRONTEND_STAGING_DOMAIN",
        "PRODUCT_TABLE_NAME",
        "ORDER_TABLE_NAME"
      ],
      "outputs": ["dist/**", "build/**", "out/**", ".next/**"]
    },
    "build-storybook": {
      "dependsOn": ["^build"],
      "outputs": ["storybook-static"]
    },
    "start": {
      "dependsOn": ["build"],
      "env": [
        "PAYLOAD_SECRET",
        "MONGODB_URI",
        "WORDPRESS_API_URL",
        "PAYLOAD_PUBLIC_SERVER_URL",
        "PAYLOAD_PUBLIC_SERVER_PORT",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "S3_BUCKET",
        "FRONTEND_STAGING_DOMAIN",
        "PRODUCT_TABLE_NAME",
        "ORDER_TABLE_NAME"
      ]
    },
    "serve": {
      "dependsOn": ["build"],
      "env": [
        "PAYLOAD_SECRET",
        "MONGODB_URI",
        "WORDPRESS_API_URL",
        "PAYLOAD_PUBLIC_SERVER_URL",
        "PAYLOAD_PUBLIC_SERVER_PORT",
        "S3_ACCESS_KEY_ID",
        "S3_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "S3_BUCKET",
        "FRONTEND_STAGING_DOMAIN",
        "PRODUCT_TABLE_NAME",
        "ORDER_TABLE_NAME"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false
    },
    "cypress": {
      "outputs": []
    },
    "cypress:headless": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "cypress:start-headless": {
      "dependsOn": ["build"],
      "outputs": []
    }
  }
}
